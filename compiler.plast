plast
  this.file = ""
  this.lineNum = 0

plast err errText:string
  "Line" + this.lineNum + ": " + errText print
  return false

plast compile code:string
  this.file = code
  code = this.file readFileSync
  code tok "\n" each line
    this.lineNum += 1
    shift = line getLeftShift
    tokens = line getPlastTokens
    tokens print
    shift % 2 != 0
      return this err "incorrect line shift"
    //shift == 0
    //  "new "+line print
    //else
    //  "print" print
  return true

main
  plast plast
  plast compile "main.plast"
